folders:
    project:
        application: application
        config: application/configs
        controller: application/controllers
        view: application/views
        block: application/views/blocks
        layout: application/views/layouts
        theme: application/views/themes
        library: library
        document-root: public

    module:
        models: models
        widgets: widgets

    theme:
        blocks: blocks
        layouts: layouts
        modules: modules

extensions:
    locale.js:
        filter: /^.*([A-z]{2})\.js$/
        render: Joy_Module_Render_JavaScript_Locale
        render-arguments: [locale]
        cache: yes
        cache.source: Joy_Cache_Memcached
        cache.duration: 600

    js:
        filter: /js$/
        render: Joy_Module_Render_JavaScript
        cache: yes
        cache.source: Joy_Cache_Memcached
        cache.duration: 600

    json:
        filter: /json$/
        render: Joy_Render_Json

    xml: 
        filter: /xml$/
        render: Joy_Render_Xml

    default:
        filter: /.*$/
        render: Joy_Module_Render_Template

files:
    config: 
        application: application.config
        application-environment: application.{environment}.config
        router: router.config
        task: task.config
        canvas: canvas.config

