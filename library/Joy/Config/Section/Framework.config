folders:
    project:
        application: application
        config: application/configs
        controller: application/controllers
        module: application/controllers/module
        canvas: application/controllers/canvases
        view: application/views
        block: application/views/blocks
        layout: application/views/layouts
        theme: application/views/themes
        library: library
        site-root: public

    module:
        models: models
        widgets: widgets

    theme:
        blocks: blocks
        layouts: layouts
        modules: modules

renders:
    js:
        class: Joy_Render_Javascript
        cache.duration: 600
    json:
        class: Joy_Render_Json
    xml: 
        class: Joy_Render_Xml
    default:
        class: Joy_Render_Template

files:
    config: 
        application:
            default: application.config
            environment: application.{environment}.config
